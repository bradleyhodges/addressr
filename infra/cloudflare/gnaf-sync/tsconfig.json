{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": false,
        "outDir": "./dist",
        "rootDir": ".",
        "resolveJsonModule": true,
        "types": ["node"]
    },
    "include": ["*.ts"],
    "exclude": ["node_modules", "dist"]
}
