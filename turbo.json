{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "globalDependencies": [".babelrc"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["src/**/*"],
            "outputs": ["lib/**"]
        },
        "ci:build": {
            "dependsOn": ["build"],
            "inputs": ["src/**/*"],
            "outputs": ["lib/**"]
        },
        "ci:version": {
            "dependsOn": ["build"]
        },
        "ci:publish": {
            "dependsOn": ["build"]
        },
        "clean": {
            "cache": false
        },
        "//#clean": {
            "cache": false
        }
    }
}
