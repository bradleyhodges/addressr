{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "ignore": [],
        "indentStyle": "space",
        "indentWidth": 4
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "useSemanticElements": {
                    "level": "off"
                }
            },
            "style": {
                "useImportType": {
                    "level": "off"
                }
            }
        }
    },
    "css": {
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 4
        },
        "linter": {
            "enabled": true
        },
        "parser": {
            "cssModules": true
        }
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "jsxQuoteStyle": "double",
            "quoteStyle": "double",
            "quoteProperties": "asNeeded",
            "semicolons": "always",
            "trailingCommas": "all"
        }
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": [
            "**/node_modules",
            "**/dist",
            "**/build",
            "**/.next",
            "**/.basehub",
            "**/.vercel",
            "**/.pnpm",
            "**/.vscode",
            "**/.git",
            "**/.cache",
            "**/cache",
            "**/types/generated",
            "**/runtime.*",
            "**/*.min.*",
            "**/metadata"
        ]
    }
}